<div class="bg-white w-48 h-44 rounded-lg" title="<%=file.originalName%>" id="<%=file._id%>">
    <div style="display: grid;place-items: center;grid-template-areas: 'inner-div';" class="h-full w-full">
        <div style="grid-area: inner-div;" class="rounded-lg bg-black bg-opacity-0 overflow-hidden z-50 opacity-0 p-4 w-full h-full hover:bg-opacity-60 hover:opacity-100 transition-all duration-500 p-5 select-none hover:select-auto">
            <% if(file.private) { %>
                <i class="fa-solid fa-lock text-white" title="This file is private"></i>
            <% } else { %>
                <i class="fa-solid fa-lock-open text-white" title="This file is public"></i>
            <% } %>
            <br><br><br>
            <a href="https://wanderers.cloud/file/<%=file.fileName%>" target="_blank"><i class="fa-solid fa-file-arrow-down text-white text-5xl hover:text-lime-500" title="download"></i></a>   <a href="#"><i class="fa-solid fa-trash text-white hover:text-red-600 transition-all duration-200 text-5xl" onclick="deleteFile('<%=file._id%>')" title="delete"></i></a>
            <% if (["audio", "video", "image"].includes(file.mime.split("/")[0])) { %>
                <a href="https://wanderers.cloud/file/<%=file.fileName%>?preview=true" target="_blank"><i class="fa-solid fa-eye text-white text-5xl hover:text-lime-300" title="preview"></i></a>
            <% } %>
        </div>
        <div style="grid-area: inner-div;" class="p-4 w-48 h-40 p-5 hover:select-none select-auto">
            <% if(file.mime.startsWith('image/')) { %>
            <img src="https://wanderers.cloud/file/<%=file.fileName%>?preview=true" class="object-scale-down max-h-20 max-w-[8rem]">
            <% } else {%>
            <img src="https://wanderers.cloud/resources/file.svg" class="object-scale-down max-h-20">
            <%}%>
            <p class="break-words line-clamp-3"><%=file.originalName %></p>
        </div>
    </div>
</div>